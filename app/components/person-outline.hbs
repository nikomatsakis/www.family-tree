{{#if this.zeroPartnerships}}
<li>
    <PersonLink @person={{@person}} @pagePerson={{@pagePerson}} @referencePerson={{@referencePerson}} />
</li>
{{else}}

{{#let this.firstPartnership as |partnership|}}
<li>
    <PersonLink @person={{@person}} @pagePerson={{@pagePerson}} @referencePerson={{@referencePerson}} />
    {{#if partnership.partner}}
    +
    <PersonLink @person={{partnership.partner}} @pagePerson={{@pagePerson}} @referencePerson={{@referencePerson}} />
    {{/if}}

    <PersonOutlineChildren @partnership={{partnership}} @pagePerson={{@pagePerson}}
        @referencePerson={{@referencePerson}} @includeSet={{@includeSet}} />
</li>
{{/let}}

{{#each this.nextPartnerships as |partnership|}}
<li>
    ...
    {{#if partnership.partner}}
    +
    <PersonLink @person={{partnership.partner}} @pagePerson={{@pagePerson}} @referencePerson={{@referencePerson}} />
    {{/if}}

    <PersonOutlineChildren @partnership={{partnership}} @pagePerson={{@pagePerson}}
        @referencePerson={{@referencePerson}} @includeSet={{@includeSet}} />
</li>
{{/each}}

{{/if}}